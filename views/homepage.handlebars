<div class="card w-75 mx-auto mt-3 bloo2" id="homeCard">
    <h1 class="text-center merckScript my-4 display-1">What's for Dinner?</h1>
    <h1 class="text-center mt-2 mb-4">Register or Login to get started!</h1>
    <div class="pbor"></div>
    <div class="container">
        <div class="row">
        <div class="col-sm p-4">
            <h2>Popular Meals</h2>
            <ul class="list-group">
                {{#each meals as |meal|}}
                    <li class="list-group-item d-flex justify-content-between align-items-start"><a href="/{{meal.id}}/recipe">{{meal.name}}</a><span class="badge bg-primary rounded-pill">{{meal.count}}</span></li>
                {{/each}}
            </ul>
        </div>
        <div class="col-sm p-4">
            <h2>Popular Mealplans</h2>
            <ul class="list-group">
                {{#each plans as |plan|}}
                    <li class="list-group-item d-flex justify-content-between align-items-start">{{plan.name}}<span class="badge bg-primary rounded-pill">{{plan.count}}</span></li>
                {{/each}}
            </ul>
        </div>
        </div>  
    </div>
</div>
